{
  "name": "deejai",
  "description": "Automatically generate playlists based on how the music sounds",
  "license": "GPL-3.0-or-later",
  "version": "1.2.8",
  "main": "./src/index.js",
  "private": true,
  "author": {
    "name": "Robert Dargavel Smith",
    "email": "teticio@gmail.com"
  },
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "echo \"No linting configured\""
  },
  "keywords": [],
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "../src/icons/icon",
        "asar": true,
        "extraResource": "../build/",
        "appBundleId": "online.deej-ai",
        "appCategoryType": "public.app-category.music"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "loadingGif": "../src/images/45.gif"
          }
        },
        {
          "name": "@electron-forge/maker-dmg",
          "config": {
            "background": "../public/ios-512x512.png"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": ["darwin"],
          "config": {}
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        },
        {
          "name": "@davidwinter/electron-forge-maker-snap",
          "config": {
            "plugs": [
              "default",
              "audio-playback"
            ],
            "categories": [
              "Music"
            ],
            "description": "Discover new music using Artificial Intelligence to automatically generate playlists based on how the music sounds. Create your own musical journey that smoothly 'joins the dots' between the songs that you choose (for example, from Mozart to Mot√∂rhead). Try playing around with the creativity parameter."
          }
        }
      ]
    }
  },
  "dependencies": {
    "electron-is-dev": "^2.0.0",
    "electron-squirrel-startup": "^1.0.0"
  },
  "devDependencies": {
    "@davidwinter/electron-forge-maker-snap": "^2.0.7",
    "@electron-forge/cli": "^6.0.0-beta.61",
    "@electron-forge/maker-deb": "^6.0.0-beta.61",
    "@electron-forge/maker-dmg": "^6.0.0-beta.61",
    "@electron-forge/maker-rpm": "^6.0.0-beta.61",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.61",
    "@electron-forge/maker-zip": "^6.0.0-beta.61",
    "electron": "^15.3.0",
    "electron-devtools-installer": "^3.2.0"
  }
}
